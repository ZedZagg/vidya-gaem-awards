{% extends 'base/standardThemed.html.twig' %}

{% block title %}Videos{% endblock %}

{% block head %}
  <style type="text/css">
    .filmstrip {
      background: url('{{ asset('img/filmstrip.png') }}') repeat-x bottom black;
      background-size: contain;
      height: 30px;
    }

    body {
      padding-top: 50px;
    }

    .closed-banner {
      width: 100%;
      background-color: maroon;
      color: white;
      font-size: 20px;
      line-height: 2em;
      text-align: center;
    }

    .navbar-fixed-top {
      background-color: black;
    }

    .jumbotron {
      background-color: #1f1f1f;
      color: white;
      text-shadow: 3px 3px black;
      padding: 0;
      margin-bottom: 10px;
    }

    .card-header {
      border-top-width: 1px;
      border-top-style: solid;
    }
  </style>
{% endblock %}

{% block beforeContainer %}
  {#<div class="closed-banner">Video submissions are now closed.</div>#}
  <header class="jumbotron masthead">
    <div class="filmstrip"></div>
    <div class="container" style="padding: 15px 0; background-image: url('{{ asset('img/videos-background.png') }}');">
      {{ include('dynamic/videos_top_section.html.twig') }}
    </div>
    <div class="filmstrip"></div>
  </header>
{% endblock %}

{% block content %}
  <div class="row">
    <div class="col-md-7">
      {{ include('dynamic/videos_left_section.html.twig') }}
    </div>
    <div class="col-md-5">
      <div class="card">
        {{ include('dynamic/videos_right_section.html.twig') }}
      </div>
    </div>
  </div>
{% endblock %}

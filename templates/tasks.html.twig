{% extends 'base/standard.html.twig' %}

{% block content %}
  <style type="text/css">
    .progress {
      height: 30px;
      margin-bottom: 30px;
      line-height: 30px;
      font-size: 14px;
    }

    .progress-bar {
      line-height: 30px;
      font-size: 14px;
    }

    .award-name {
      margin-bottom: 3px;
    }

    .award-name .emoji {
      max-width: 16px;
    }
  </style>

  <div class="row">
    <div class="col-xs-12">
      <h1 class="page-header">
        Remaining Tasks
      </h1>
      <div class="row">
      {% for name, data in tasks %}
        <div class="col-xs-4">
          <p class="lead" style="margin-bottom: 10px;">
            <strong>{{ name }}</strong>
          </p>
          <div class="progress">
            <div class="progress-bar progress-bar-{{ data.class }}" style="width: {{ 100 - data.percent }}%">
              {% if 100 - data.percent >= 35 %}
                {{ data.count }} / {{ data.total }} ({{ data.percent | round(1) }}%)
              {% endif %}
            </div>
            {% if 100 - data.percent < 35 %}
              <span style="margin-left: 7px;" class="text-{{ data.class }}">
                {{ data.count }} / {{ data.total }} ({{ data.percent | round(1) }}%)
              </span>
            {% endif %}
          </div>
          {% for award in data.awards %}
            <div class="award-name">
              <a href="{{ path('nomineeManager', {awardID: award.award.id}) }}">
              {#<a href="#" onclick="event.preventDefault(); $('#{{ data.id }}-{{ award.award.id }}').toggle()">#}
                {{ award.award.name }}
              </a>
              <span style="float: right;">{{ award.nominees | length }} / {{ award.award.nominees | length }}</span>
            </div>
            <div id="{{ data.id }}-{{ award.award.id }}" style="margin-bottom: 15px;">
              <ul>
                {% for nominee in award.nominees %}
                  <li>
                    {{ nominee.name }}
                  </li>
                {% endfor %}
              </ul>
            </div>
          {% endfor %}
        </div>
      {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}

            <div class="voteBox">
              <div class="nominee">
                <div class="fakeElement"></div>
              </div>
            </div>
          </div>
        {% endif %}

        {% if votingOpen %}

          <h4 style="text-align: center; margin-top: 10px; margin-bottom: 10px;" id="submitReminder">Don't forget to click on "Submit Votes" below to save your votes!</h4>

          <div class="buttons">
            <button id="btnResetVotes" class="btnSubmit">Reset Votes</button>
            <button id="btnLockVotes" class="btnSubmit">Submit Votes</button>
{#            <div id="btnResetVotes" class="btnSubmit" title="Reset Votes"></div>#}
{#            <div id="btnLockVotes" class="btnSubmit" title="Submit Votes"></div>#}
          </div>

          <div class="buttons" style="margin-top: 10px;">
            <a href="{{ path('voting', {'awardID': nextAward.id}) }}" class="navigation next" title="Next award">
              <button>{{ nextAward.name }} >></button>
